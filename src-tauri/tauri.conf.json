{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri-2/main/tooling/schema/src-tauri/tauri.conf.json",
  "productName": "MD Analyzer",
  "version": "0.2.0",
  "identifier": "com.mdanalyzer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MD Analyzer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "signingIdentity": "-",
      "minimumSystemVersion": "10.13"
    }
  }
}
